<p id="notice"><%= notice %></p>

<h1>Locais</h1>

<%= link_to 'New Local', new_local_path,  class: 'btn btn-sm btn-primary pull-right' %>
<table class =" table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Iniciais</th>
      <th>Tipo</th>
      <th>Instituição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locals.each do |local| %>
      <tr>
          <td><%= local.name %></td>
          <td><%= local.initials %></td>
          <td><%= local.type_local_id %></td>
          <td><%= local.institution_id %></td>
        <td>  
        <div class="btn-group pull-right">  
          <%#= link_to 'Show', local %>
          <%= link_to 'editar', edit_local_path(local) , class: 'btn btn-xs btn-warning' %>
          <%= link_to 'deletar', local, method: :delete, data: { confirm: 'quer mesmo deletar?' }, class: 'btn btn-xs btn-warning' %>
        </div>  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

