<p id="notice"><%= notice %></p>

<h1>Tipos de Logradouro</h1>
<%= link_to 'novo registro', new_type_patio_path ,  class: 'btn btn-sm btn-primary pull-right' %>

<table  class =" table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Iniciais</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @type_patios.each do |type_patio| %>
      <tr>
        <td><%= type_patio.name %></td>
        <td><%= type_patio.initial %></td>
        <td>
        <div class="btn-group pull-right">
        <%#= link_to 'Show', type_patio %>
          <%= link_to 'editar', edit_type_patio_path(type_patio), class: 'btn btn-xs btn-warning'  %>
          <%= link_to 'deletar', type_patio, method: :delete, data: { confirm: 'quer mesmo deletar?' }, class: 'btn btn-xs btn-warning'  %>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

