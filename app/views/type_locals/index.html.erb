<p id="notice"><%= notice %></p>

<h1>Tipos de Local</h1>
<%= link_to 'novo registro', new_type_local_path, class: 'btn btn-sm btn-primary pull-right' %>

<table class =" table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @type_locals.each do |type_local| %>
      <tr>
        <td><%= type_local.name %></td>
        <td><%#= link_to 'Show', type_local %></td>
        <td>
        <div class="btn-group pull-right">
          <%= link_to 'editar', edit_type_local_path(type_local), class: 'btn btn-xs btn-warning' %>
          <%= link_to 'deletar', type_local, method: :delete, data: { confirm: 'quer mesmo remover?' } , class: 'btn btn-xs btn-warning'%>
        </div>  
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

