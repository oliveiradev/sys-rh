<p id="notice"><%= notice %></p>

<h1>Listing People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Rg</th>
      <th>Cpf</th>
      <th>Birth date</th>
      <th>Cel</th>
      <th>Tel1</th>
      <th>Tel2</th>
      <th>District</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.gender %></td>
        <td><%= person.rg %></td>
        <td><%= person.cpf %></td>
        <td><%= person.birth_date %></td>
        <td><%= person.cel %></td>
        <td><%= person.tel1 %></td>
        <td><%= person.tel2 %></td>
        <td><%= person.district_id %></td>
        <td><%= person.user_id %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

