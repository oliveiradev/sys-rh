<p id="notice"><%= notice %></p>

<h1>Pessoas</h1>
<%= link_to 'novo registro', new_person_path,  class: 'btn btn-sm btn-primary pull-right'  %>

<table class =" table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Nascimento</th>
      <th>Bairro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.birth_date %></td>
        <td><%= person.district_id %></td>
        <td>
        <div class="btn-group pull-right">
          <%#= link_to 'Show', person %>
          <%= link_to 'Edit', edit_person_path(person), class: 'btn btn-xs btn-warning' %>
          <%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-warning' %>
        </div>  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

