<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>
<%= link_to 'novo ', new_user_path,  class: 'btn btn-sm btn-primary pull-right' %>

<table class="table">
  <thead>
    <tr>
      <th>email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email%></td>
        <td>
          <div class="btn-group pull-right"> 
            <%= link_to 'exibir', user , class: 'btn btn-xs btn-warning' %>
            <%= link_to 'editar', edit_user_path(user) , class: 'btn btn-xs btn-warning' %>
            <%= link_to 'deletar', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-warning' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

