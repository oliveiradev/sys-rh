<p id="notice"><%= notice %></p>

<h1>Lotação</h1>

<%= link_to 'novo registro', new_stocking_path, class: 'btn btn-sm btn-primary pull-right'  %>
<table class =" table table-striped">
  <thead>
    <tr>
      <th>Data</th>
      <th>Carga Horária</th>
      <th>Função</th>
      <th>Local</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stockings.each do |stocking| %>
      <tr>
        <td><%= stocking.data %></td>
        <td><%= stocking.workload %></td>
        <td><%= stocking.function_id %></td>
        <td><%= stocking.local_id %>
        <td>
        <div class="btn-group pull-right">
          <%#= link_to 'Show', stocking %>
          <%= link_to 'editar', edit_stocking_path(stocking), class: 'btn btn-xs btn-warning' %>
          <%= link_to 'deletar', stocking, method: :delete, data: { confirm: 'quer mesmo deletar?' }, class: 'btn btn-xs btn-warning' %>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

