<p id="notice"><%= notice %></p>

<h1>Funções</h1>

<%= link_to 'novo registro', new_function_path , class: 'btn btn-sm btn-primary pull-right' %>
<table class =" table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @functions.each do |function| %>
      <tr>
        <td>
        <td>
        <div class="btn-group pull-right">
          <%= function.name %>
          <%#= link_to 'Show', function %>
          <%= link_to 'Edit', edit_function_path(function), class: 'btn btn-xs btn-warning' %>
          <%= link_to 'Destroy', function, method: :delete, data: { confirm: 'quer mesmo deletar?' }, class: 'btn btn-xs btn-warning' %>
        </div>    
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

