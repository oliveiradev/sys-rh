<p id="notice"><%= notice %></p>

<h1>Tipos de Vínculo</h1>
<%= link_to 'novo registro', new_type_bond_path , class: 'btn btn-sm btn-primary pull-right'%>

<table class =" table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Abreviação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @type_bonds.each do |type_bond| %>
      <tr>
        <td><%= type_bond.name %></td>
        <td>
        <%= type_bond.abbreviation %>
        <td>
        <div class="btn-group pull-right">
        <%#= link_to 'Show', type_bond %>
          <%= link_to 'editar', edit_type_bond_path(type_bond), class: 'btn btn-xs btn-warning' %>
          <%= link_to 'deletar', type_bond, method: :delete, data: { confirm: 'quer mesmo remover?' }, class: 'btn btn-xs btn-warning' %>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

