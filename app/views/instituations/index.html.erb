<p id="notice"><%= notice %></p>

<h1>Instituições</h1>
<%= link_to 'novo registro', new_instituation_path, class: 'btn btn-sm btn-primary pull-right' %>

<table class =" table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instituations.each do |instituation| %>
      <tr>
        <td>
        <td>
        <div class="btn-group pull-right">
          <%= instituation.name %>
          <%#= link_to 'Show', instituation %>
          <%= link_to 'editar', edit_instituation_path(instituation) , class: 'btn btn-xs btn-warning' %>
          <%= link_to 'deletar', instituation, method: :delete, data: { confirm: 'quer mesmo deletar' }, class: 'btn btn-xs btn-warning' %>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

